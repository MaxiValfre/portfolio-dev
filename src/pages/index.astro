---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import image from "../../public/Yo.jpg";
import Projects from "../components/Projects.astro";
import Techs from "../components/Techs.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import CV from "../../docs/CV Maximo Valfre.pdf";


const DownloadCV = () => {
  const handleDownload = () => {
    const link = document.createElement('a');
    link.href = CV;
    link.download = 'CV_Maximo_Valfre.pdf';
    link.click();
  };
}
---

<Layout title="Maxi Portfolio">
  <Header />
  <div class="flex flex-col min-h-[100dvh]">
    <main class="flex-1">
      <section
        id="about"
        class="px-4 md:px-6 py-12 md:py-24 lg:py-20 flex flex-col items-center justify-center text-center"
      >
        <div class="max-w-3xl space-y-2">
          <div class="flex justify-center">
            <Image
              src={image}
              alt=""
              width="150"
              height="150"
              class="rounded-full"
              style="aspect-ratio:200/200;object-fit:cover"
              loading="eager"
            />
          </div>
          <h1 class="text-2xl md:text-6xl font-bold tracking-tighter">
            Soy Maximo, Desarrollador Web.
          </h1>
          <p class="text-lg md:text-xl text-gray-400">
            Un apasionado desarrollador especializado en la creación de sitios
            web y aplicaciones. Mi objetivo es transformar ideas en realidades
            digitales que ofrezcan experiencias excepcionales a los usuarios.
          </p>
        </div>
        <div class="mt-8 flex items-center gap-4">
          <a
            href="/Cv/"
            class="inline-flex h-8 w-40 items-center justify-center rounded-md bg-[#5d39c0] px-4 text-sm font-medium text-gray-50 shadow transition-colors hover:bg-[#8563D9]"
          >
            <svg
              class="w-5 h-5 mr-2 text-white-800 white"
              aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              fill="none"
              viewBox="0 0 24 24"
            >
              <path
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M5 12h14"></path>
              <path
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 5l7 7-7 7"></path>
            </svg>

            Mirar CV
          </a>
          <a
            class="inline-flex h-8 w-40 items-center justify-center rounded-md bg-[#5d39c0] px-4 text-sm font-medium text-gray-50 shadow transition-colors hover:bg-[#8563D9]"
            href={CV}
            download="CV_Maximo_Valfre.pdf"
          >
            <svg
              class="w-5 h-5 mr-2 text-white-800 white"
              aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              fill="none"
              viewBox="0 0 24 24"
            >
              <path
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 4h3a1 1 0 0 1 1 1v15a1 1 0 0 1-1 1H6a1 1 0 0 1-1-1V5a1 1 0 0 1 1-1h3m0 3h6m-6 5h6m-6 4h6M10 3v4h4V3h-4Z"
              ></path>
            </svg>
            Descargar CV
          </a>
        </div>
        <div class="mt-8 flex items-center gap-4">
          <a
            target="_blank"
            class="inline-flex h-8 items-center justify-center rounded-md bg-[#5d39c0] px-4 text-sm font-medium text-gray-50 shadow transition-colors hover:bg-[#8563D9]"
            href="https://www.linkedin.com/in/maxivalfre/"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="h-5 w-5 mr-2"
            >
              <path
                d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"
              ></path>
              <rect width="4" height="12" x="2" y="9"></rect>
              <circle cx="4" cy="4" r="2"></circle>
            </svg>
            LinkedIn
          </a>
          <a
            target="_blank"
            class="inline-flex h-8 items-center justify-center rounded-md bg-[#5d39c0] px-4 text-sm font-medium text-gray-50 shadow transition-colors hover:bg-[#8563D9]"
            href="https://github.com/MaxiValfre"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="h-5 w-5 mr-2"
            >
              <path
                d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
              ></path>
              <path d="M9 18c-4.51 2-5-2-7-2"></path>
            </svg>
            GitHub
          </a>
          <a
            onclick="copyToClipboard(this)"
            class="relative cursor-pointer inline-flex h-8 items-center justify-center rounded-md bg-[#5d39c0] px-4 text-sm font-medium text-gray-50 shadow transition-colors hover:bg-[#8563D9] w-[120px]"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="h-5 w-5 mr-2"
            >
              <rect width="20" height="16" x="2" y="4" rx="2"></rect>
              <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
            </svg>
            <span
              id="email-text"
              class="transition-opacity duration-300 flex-1 text-center"
              >Email</span
            >
            <span
              id="copy-message"
              class="absolute inset-0 flex items-center justify-center text-white text-sm font-medium rounded-md bg-[#5d39c0] opacity-0 transition-opacity duration-300"
              >¡Copiado!</span
            >
          </a>
        </div>
      </section>

      <section
        id="projects"
        class="px-4 md:px-6 py-12 md:py-24 lg:py-16 bg-[#0D1117]"
      >
        <Projects />
      </section>

      <section id="skills" class="px-4 md:px-6 py-12 md:py-24 lg:py-16">
        <Techs />
      </section>
    </main>
    <Footer />
  </div>
  <script is:inline>
    function copyToClipboard(button) {
      const email = "maximovalfre170@gmail.com";
      const el = document.createElement("textarea");
      el.value = email;
      document.body.appendChild(el);
      el.select();
      document.execCommand("copy");
      document.body.removeChild(el);

      const emailText = button.querySelector("#email-text");
      const copyMessage = button.querySelector("#copy-message");

      emailText.classList.add("opacity-0");
      copyMessage.classList.add("opacity-100");

      setTimeout(() => {
        copyMessage.classList.remove("opacity-100");
        emailText.classList.remove("opacity-0");
      }, 1000);
    }
  </script>
</Layout>
